{
  "name": "bitexpert/adrenaline",
  "description": "A PSR-7 micro framework built on top of the Adroit middleware.",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Peter Hildenbrand",
      "email": "P.Hildenbrand@bitExpert.de",
      "homepage": "http://www.bitExpert.de"
    },
    {
      "name": "Stephan Hochd√∂rfer",
      "email": "S.Hochdoerfer@bitExpert.de",
      "homepage": "http://www.bitExpert.de"
    }
  ],
  "require": {
    "php": "^5.5|^7.0",
    "bitexpert/pathfinder": "dev-master",
    "bitexpert/adroit": "dev-master",
    "bitexpert/slf4psrlog": "^0.1.0",
    "zendframework/zend-stratigility": "^1.1.0",
    "zendframework/zend-diactoros": "^1.0.0",
    "psr/http-message": "^1.0",
    "willdurand/negotiation": "^2.0",
    "twig/twig": "^1.24"
  },
  "require-dev": {
    "phpunit/php-code-coverage": "^2.1.0",
    "phpunit/phpunit": "^4.8",
    "squizlabs/php_codesniffer": "^2.3",
    "phpdocumentor/phpdocumentor": "^2.8",
    "monolog/monolog": "^1.14.0",
    "phing/phing": "^2.8.0",
    "bitexpert/phing-securitychecker": "^0.2.1",
    "mikey179/vfsStream": "~1"
  },
  "autoload": {
    "psr-4": {
      "bitExpert\\Adrenaline\\": "src/bitExpert/Adrenaline"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "bitExpert\\Adrenaline\\": "tests/bitExpert/Adrenaline"
    }
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/bitExpert/pathfinder"
    },
    {
      "type": "git",
      "url": "https://github.com/bitExpert/adroit"
    }
  ]
}
